{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2015", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*"]
}
